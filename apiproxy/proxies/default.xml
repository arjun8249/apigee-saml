<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
    <FaultRules/>
    <PreFlow name="PreFlow">
        <Request/>
        <Response/>
    </PreFlow>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <Flows>
        <Flow name="generatesaml">
            <Description/>
            <Request>
                <Step>
                    <Name>Generate-SAML-Assertion-1</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath &quot;/generate-saml&quot;) and (request.verb = &quot;POST&quot;)</Condition>
        </Flow>
        <Flow name="generatesaml2">
            <Description/>
            <Request>
                <Step>
                    <Name>Generate-SAML-Assertion-2</Name>
                </Step>
            </Request>
            <Response>
                <Step>
                    <Name>Assign-Message-1</Name>
                </Step>
            </Response>
            <Condition>(proxy.pathsuffix MatchesPath &quot;/generate-saml2&quot;) and (request.verb = &quot;GET&quot;)</Condition>
        </Flow>
        <Flow name="saml token response from IDP">
            <Description/>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath &quot;/saml-sso&quot;) and (request.verb = &quot;POST&quot;)</Condition>
        </Flow>
        <Flow name="validate-saml">
            <Description/>
            <Request>
                <Step>
                    <Name>Validate-SAML-Assertion-1</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath &quot;/validate-saml&quot;) and (request.verb = &quot;POST&quot;)</Condition>
        </Flow>
        <Flow name="validate-saml2">
            <Description/>
            <Request>
                <Step>
                    <Name>Validate-SAML-Assertion-2</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath &quot;/validate-saml2&quot;) and (request.verb = &quot;POST&quot;)</Condition>
        </Flow>
        <Flow name="validate-saml3">
            <Description/>
            <Request>
                <Step>
                    <Name>Validate-SAML-Assertion-3</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath &quot;/validate-saml3&quot;) and (request.verb = &quot;POST&quot;)</Condition>
        </Flow>
        <Flow name="generatesaml3">
            <Description/>
            <Request/>
            <Response>
                <Step>
                    <Name>Generate-SAML-Assertion-1</Name>
                </Step>
            </Response>
            <Condition>(proxy.pathsuffix MatchesPath &quot;/generate-saml3&quot;) and (request.verb = &quot;POST&quot;)</Condition>
        </Flow>
    </Flows>
    <HTTPProxyConnection>
        <BasePath>/saml</BasePath>
        <Properties/>
        <VirtualHost>default</VirtualHost>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="noroute">
        <!--TargetEndpoint>TargetEndpoint-1</TargetEndpoint-->
    </RouteRule>
</ProxyEndpoint>